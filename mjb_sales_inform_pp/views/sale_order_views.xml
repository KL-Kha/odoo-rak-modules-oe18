<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_pmc_mjb" model="ir.ui.view">
        <field name="name">view.sale.order.pmc.mjb</field>
        <field name="model">sale.order</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="pmc_packing_log_btn" string="@PMC/Packing" type="object"/>
                <button name="logistics_log_btn" string="@Logistics" type="object"/>
            </xpath>
        </field>
    </record>

</odoo>