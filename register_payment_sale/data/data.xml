<odoo>
    <!-- Payment sequences -->
        <record id="sequence_payment_request_number" model="ir.sequence">
            <field name="name">Payments Number</field>
            <field name="code">account.payment.number</field>
            <field name="prefix">P/%(range_year)s/</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="True" name="use_date_range"/>
            <field eval="False" name="company_id"/>
            <field name="padding">4</field>
        </record>
</odoo>